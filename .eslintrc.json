{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}],
    "mocha/no-exclusive-tests": "error",
    "no-unused-vars": ["error", { "args": "none", "ignoreRestSiblings": true}],
    "padded-blocks": "off",
    "semi": ["error", "always"],
    "space-before-function-paren": "off"
  }
}